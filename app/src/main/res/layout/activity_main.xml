<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/addCategoryBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="Add Category" />

        <Button
        android:id="@+id/addSubCat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addCategoryBtn"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="Add Subcategory" />

        <Button
            android:id="@+id/addTopics"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addSubCat"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Add Topic" />

        <Button
            android:id="@+id/addVideos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addTopics"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Add Video" />

        <Button
        android:id="@+id/manageChatsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addVideos"
        android:layout_marginTop="24dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
        android:text="Manage User Chats" />

        <Button
            android:id="@+id/addBanner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/manageChatsBtn"
            android:layout_marginTop="24dp"
            android:layout_width="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Add a Banner" />

        <Button
            android:id="@+id/manageBanners"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/addBanner"
            android:layout_marginTop="8dp"
            android:layout_width="0dp"
            android:fontFamily="@font/quicksand_bold"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Delete a banner" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/notAdminTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not Admin."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>